\newcommand{\getlength}[2]{\pgfmathtruncatemacro#1{round(3.51459804*#2)/100.0}} % result in cm

\mode<presentation>{\usetheme[numbering=fraction]{metropolis}}
\definecolor{badgerred}{cmyk}{0.03, 1, 0.66, 0.12}
\setbeamercolor{progress bar}{fg=badgerred}
\setbeamercolor{alerted text}{fg=badgerred}
\setbeamercolor{block title}{bg=badgerred!70}
\setbeamercolor{block body}{
	use={block title, normal text},
	bg=block title.bg!30!normal text.bg
}
\setbeamercolor{block title alerted}{
    use={block title},
    bg=block title.bg!10
}
