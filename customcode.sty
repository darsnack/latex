%------------------------------------------------------------------------------
% Custom Code Styles
%------------------------------------------------------------------------------

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{customcode}

\RequirePackage{listings}
\RequirePackage{color}

\definecolor{codeblue}{rgb}{0.1, 0.1, 0.8}

\newcommand{\code}[1]{{\texttt{#1}}}
\newcommand{\shell}[2]{\hspace*{10 pt} \texttt{#1 >> } {\color{codeblue}\texttt{#2}}}
\newcommand{\stdout}[1]{\hspace*{10 pt} {\color{red} \texttt{#1}}}

\lstdefinestyle{matlab}{
	language=Matlab,
	frame=L,
	basicstyle=\ttfamily,
	keywordstyle=\color{blue},
}

\lstdefinestyle{c}{
	language=C,
	frame=L,
	basicstyle=\ttfamily,
	keywordstyle=\color{blue},
}

\lstdefinestyle{shell}{
	language=bash,
	frame=L,
	basicstyle=\ttfamily,
	keywordstyle=\color{blue},
}
